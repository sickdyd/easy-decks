generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Deck {
  id Int @id @default(autoincrement())
  name String
  cards Card[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Card {
  id Int @id @default(autoincrement())
  front String[]
  back String[]
  chances Int
  deck Deck @relation(fields: [deckId], references: [id])
  deckId Int
}
